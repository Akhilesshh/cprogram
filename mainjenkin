pipeline {
agent any
parameters {
  string defaultValue: 'main', name: 'branch', trim: true
}
environment {
  BRANCH_NAME = "$(branch)"
}

stages {
stage('BUILD') {
when {
branch 'main'
}
steps{
sh ''' 
echo "BUILD executes if branch is main"
'''
}
}
stage('STAGE-2') {
when {
branch 'branch1'
}
steps{
sh ''' 
echo "STAGE-2 executes if branch is branch1"
'''
}
}
}
}
